<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link href="~/Content/MvcGrid/mvc-grid.css" rel="stylesheet">
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>


<body>
    <nav class="navbar navbar-inverse navbar-fixed-top">
        <div class="container-fluid">
            <div class="navbar-header">
                <a class="navbar-brand" href="/">
                    <img src="~/Content/oxylogo.gif" alt="oxylogo" height="36" style="margin: -9px">
                </a>
                @Html.ActionLink("MKN Well Optimization Records", "Index", "Wellopts", new { area = "" }, new { @class = "navbar-brand" })
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse" title="more options">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>
            <div class="navbar-collapse collapse text-bg-success p-3">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Wellopts")</li>
                    <li class="dropdown">
                        <a href="#"
                           class="dropdown-toggle"
                           data-toggle="dropdown"
                           role="button"
                           aria-haspopup="true"
                           aria-expanded="false">
                            Reports<span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu">
                            <li>
                                @Html.ActionLink("DB Activity", "DBActivity", "Reports")
                            </li>
                            <li>
                                @Html.ActionLink("OTP Reports", "WeeklyOptReportPerALS", "Reports")
                            </li>
                            <!--

                             <li>
                                Html.ActionLink("Well OptBy Area", "WellOptByArea", "Reports")
                            </li>
                              -->


                        </ul>
                    </li>
                   
                    @RenderSection("uploadLink", required: false)

                    <li>@Html.ActionLink("User Guide", "Index", "UserGuide")</li>
                    <li>@Html.ActionLink("About", "Index", "About")</li>
                    

                </ul>
                <p class="nav navbar-text navbar-right" style=" padding-right: 9px; ">@User.Identity.Name</p>
            </div>
        </div>
    </nav>
    <div class="container body-content footer">
        @RenderBody()

        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - MKN Well Optimization Records</p>
        </footer>
    </div>
    <script src="~/Scripts/MvcGrid/mvc-grid.js"></script>
    <script>
        [].forEach.call(document.getElementsByClassName('mvc-grid'), function (element) {
            new MvcGrid(element);
        });
    </script>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
